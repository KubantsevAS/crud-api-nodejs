{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "tsconfig.json",
        "webpack.config.js",
        "jest.config.js",
        "eslint.config.js"
    ],
}
